@model IEnumerable<prac_1_272.Models.students>

@{
    ViewBag.Title = "StudentList";
}

<h2>List of students</h2><!--STEP 3: ADD VIEW: Added as list-->

<p class="create-btn">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="header">
        <th>
            @Html.DisplayNameFor(model => model.StudentNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.myLink)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            <a href="@Url.Content(item.myLink)" onclick="window.location'@Url.Action("StudentList", "StudentController")'" class="custom-btn">Link</a>
        </td>
    </tr>
}

</table>
